#!/usr/bin/env node

const dotEvent = require("dot-event").default
const dotLink = require("../dist/link").default
const dotStore = require("dot-store").default
const dotTask = require("dot-task").default

const events = dotEvent()
const store = dotStore(events)

dotTask({ events, store })

events
  .task({
    arg: process.argv.slice(2),
    composer: dotLink,
    op: "link",
    path: process.cwd(),
  })
  .catch(function(e) {
    console.error(e)
    process.exit(1)
  })
